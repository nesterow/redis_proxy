{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./build",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "rootDirs": [
            ".",
            "./src"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}